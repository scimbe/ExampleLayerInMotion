{
    "name": "Java Motion System Development",
    "dockerFile": "Dockerfile",
    
    "customizations": {
        "vscode": {
            "extensions": [
                "vscjava.vscode-java-pack",
                "vscjava.vscode-maven",
                "vscjava.vscode-java-debug",
                "vscjava.vscode-java-test",
                "redhat.java",
                "ms-azuretools.vscode-docker",
                "eamodio.gitlens",
                "streetsidesoftware.code-spell-checker",
                "ms-vscode.vscode-java-dependency"
            ],
            "settings": {
                "java.configuration.updateBuildConfiguration": "automatic",
                "java.server.launchMode": "Standard",
                "java.format.settings.url": "https://raw.githubusercontent.com/google/styleguide/gh-pages/eclipse-java-google-style.xml",
                "java.format.settings.profile": "GoogleStyle",
                "editor.formatOnSave": true,
                "editor.formatOnPaste": true,
                "files.trimTrailingWhitespace": true,
                "files.insertFinalNewline": true,
                "java.test.config": {
                    "vmargs": [
                        "-Xmx512m"
                    ]
                },
                "java.completion.importOrder": [
                    "java",
                    "javax",
                    "com",
                    "org"
                ]
            }
        }
    },

    "forwardPorts": [],

    "remoteUser": "vscode",

    "mounts": [
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.m2,target=/home/vscode/.m2,type=bind,consistency=cached"
    ],

    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt", "seccomp=unconfined"
    ],

    "features": {
        "ghcr.io/devcontainers/features/java:1": {
            "version": "17",
            "installMaven": "true",
            "mavenVersion": "3.9.4"
        },
        "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    },

    "postCreateCommand": "mvn install -DskipTests",

    "remoteEnv": {
        "JAVA_HOME": "/usr/lib/jvm/msopenjdk-17",
        "MAVEN_HOME": "/usr/share/maven"
    }
}